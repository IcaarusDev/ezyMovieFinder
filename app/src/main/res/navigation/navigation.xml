<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.icaarusdev.ezymoviefinder.view.MovieListFragment"
        android:label="MovieListFragment" >
        <action
            android:id="@+id/actionMovieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.icaarusdev.ezymoviefinder.view.MovieDetailFragment"
        android:label="MovieDetailFragment" >
        <action
            android:id="@+id/actionMovieListFragment"
            app:destination="@id/movieListFragment"/>

        <argument
            android:name="movieId"
            android:defaultValue="0"
            app:argType="integer"/>

    </fragment>
</navigation>