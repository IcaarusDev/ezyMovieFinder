<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.icaarusdev.ezymoviefinder.view.MovieListFragment"
        android:label="MovieListFragment" >
        <action
            android:id="@+id/actionMovieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <action
            android:id="@+id/action_movieListFragment_to_searchMovieFragment"
            app:destination="@id/searchMovieFragment" />

    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.icaarusdev.ezymoviefinder.view.MovieDetailFragment"
        android:label="MovieDetailFragment" >
        <action
            android:id="@+id/actionMovieListFragment"
            app:destination="@id/movieListFragment"/>

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer"/>


    </fragment>


    <fragment
        android:id="@+id/searchMovieFragment"
        android:name="com.icaarusdev.ezymoviefinder.view.SearchMovieFragment"
        android:label="SearchMovieFragment" >
        <action
            android:id="@+id/actionSearchMovieFragment"
            app:destination="@id/movieListFragment" />
        <action
            android:id="@+id/action_searchMovieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />

    </fragment>
</navigation>